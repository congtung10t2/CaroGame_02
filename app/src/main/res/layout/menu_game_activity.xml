<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <data>
        <variable
            name="playerStorage" type="com.framgia.carogame.PlayerStorage"/>
    </data>
    <RelativeLayout
        style="@style/MatchParrentStyle"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <CheckBox
            style="@style/WrapContentStyle"
            android:text="@string/bluetooth_state"
            android:id="@+id/checkBox"
            android:layout_marginTop="@dimen/bluetooth_option_top_margin"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <Button
            style="@style/WrapContentStyle"
            android:text="@string/find_devices"
            android:id="@+id/button"
            android:layout_marginTop="@dimen/find_device_top_margin"
            android:layout_below="@+id/checkBox"
            android:layout_toLeftOf="@+id/checkBox"
            android:layout_toStartOf="@+id/checkBox"/>

        <Button
            style="@style/WrapContentStyle"
            android:text="@string/create_game"
            android:id="@+id/button2"
            android:layout_alignTop="@+id/button"
            android:layout_toRightOf="@+id/checkBox"
            android:layout_toEndOf="@+id/checkBox"/>

        <TableLayout
            style="@style/MatchParrentStyle"
            android:layout_marginTop="@dimen/table_result_top_margin"
            android:layout_below="@+id/button"
            android:id="@+id/result"
            android:stretchColumns="1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TableRow
                style="@style/MatchParrentStyle">
                <TextView
                    style="@style/MyDefaultTextOnTable"
                    android:text="@string/win"/>

                <TextView
                    style="@style/MyDefaultTextOnTable"
                    android:text="@{String.valueOf(playerStorage.getWin())}"
                    android:layout_column="2" />

            </TableRow>

            <TableRow
                style="@style/MatchParrentStyle">
                <TextView
                    style="@style/MyDefaultTextOnTable"
                    android:text="@string/lost"/>

                <TextView
                    style="@style/MyDefaultTextOnTable"
                    android:text="@{String.valueOf(playerStorage.getLost())}"
                    android:layout_column="2"/>
            </TableRow>

            <TableRow
                style="@style/MatchParrentStyle">
                <TextView
                    style="@style/MyDefaultTextOnTable"
                    android:text="@string/rate"/>

                <TextView
                    style="@style/MyDefaultTextOnTable"
                    android:text="@{playerStorage.getRatePercent()}"
                    android:layout_column="2"/>
            </TableRow>

            <TableRow
                style="@style/MatchParrentStyle">
                <TextView
                    style="@style/MyDefaultTextOnTable"
                    android:text="@string/streak"/>

                <TextView
                    style="@style/MyDefaultTextOnTable"
                    android:text="@{String.valueOf(playerStorage.getStreak())}"
                    android:layout_column="2"/>
            </TableRow>

        </TableLayout>

        <TextView
            style="@style/WrapContentStyle"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/device"
            android:id="@+id/device_name"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/checkBox"
            android:layout_toStartOf="@+id/checkBox"
            android:layout_marginTop="@dimen/device_name_top_margin"/>

        <TextView
            style="@style/WrapContentStyle"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/address"
            android:id="@+id/device_address"
            android:layout_alignTop="@+id/device_name"
            android:layout_toRightOf="@+id/checkBox"
            android:layout_toEndOf="@+id/checkBox"/>

    </RelativeLayout>
</layout>